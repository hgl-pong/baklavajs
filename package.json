{
    "name": "baklavajs-monorepo",
    "version": "2.7.0",
    "description": "BaklavaJS - A visual node editor for the web",
    "author": "newcat <freddy.wagner@web.de>",
    "private": true,
    "type": "module",
    "scripts": {
        "playground": "cd packages/renderer-vue && yarn run dev --host",
        "lint": "eslint \"packages/*/src/**/*.{ts,vue}\"",
        "build": "lerna run build",
        "test": "lerna run test",
        "clean": "rimraf ./packages/*/dist && rimraf ./packages/full/lib",
        "generate-api-docs": "typedoc",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "version": "yarn install && git stage yarn.lock",
        "electron": "electron electron/main.js",
        "electron:dev": "NODE_ENV=development electron electron/main.js",
        "electron:pack": "electron-builder",
        "electron:dist": "yarn build && electron-builder",
        "build:electron": "cd packages/renderer-vue && yarn build && cd ../.. && electron-builder"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "electron": "^37.4.0",
        "electron-builder": "^26.0.12",
        "electron-packager": "^17.1.2",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-vue": "^10.1.0",
        "globals": "^16.2.0",
        "lerna": "^8.2.2",
        "mermaid": "^11.6.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "typedoc": "^0.28.5",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.33.0",
        "vitepress": "^1.6.3",
        "vue-eslint-parser": "^10.1.3"
    },
    "packageManager": "yarn@3.5.1",
    "main": "electron/main.cjs",
    "homepage": "./",
    "build": {
        "appId": "com.baklavajs.app",
        "productName": "BaklavaJS",
        "directories": {
            "output": "build-output"
        },
        "files": [
            "electron/**/*",
            "packages/renderer-vue/dist/**/*",
            "packages/core/dist/**/*",
            "packages/events/dist/**/*",
            "packages/themes/dist/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "electron/assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "target": "dmg",
            "icon": "electron/assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "electron/assets/icon.png"
        }
    }
}
